
@{
    ViewBag.Title = "ViewCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Tables <small> of Stock Category</small></h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5   form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row" style="display: block;">
            <div class="col-md-12 col-sm-12  ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Stock <small>Item Categories</small></h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <button type="submit" class="btn btn-success" onclick="print();">Print Report</button>
                        <a class="btn btn-success pull-right" href="~/Category/CreateCategory">Add New Category Type</a>
                        <div class="table-responsive">
                            <table class="table table-striped jambo_table bulk_action" id="tabletoprint">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Category id</th>
                                        <th class="column-title">Category Name</th>
                                        <th class="column-title">Category Type</th>
                                        <th class="column-title">Category Description</th>
                                        <th class="column-title">RecordDate</th>
                                        <th class="column-title no-link last">
                                            <span class="nobr">Action</span>
                                        </th>
                                        <th class="bulk-actions" colspan="7">
                                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @if (ViewBag.Categories != null)
                                    {
                                        foreach (var category in ViewBag.Categories)
                                        {
                                            <tr class="even pointer">
                                                <td class=" ">@category.cid</td>
                                                <td class=" ">@category.cname</td>
                                                <td class=" ">@category.ctype</td>
                                                <td class=" ">@category.cdesc</td>
                                                <td class=" ">@category.RecordDate</td>>
                                                <td class=" last">
                                                    <a href="#">View</a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        //function print();
        $(document).ready(function () {
            $('#tabletoprint').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'print'
                ]
            });
        });
    </script>

