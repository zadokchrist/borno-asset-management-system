
@{
    ViewBag.Title = "ViewRecordedFleets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>Fleet Report</h3>
        </div>

        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="clearfix"></div>

    <div class="row">

        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">

                    <h6 class="bg-green text-center">@ViewBag.Message</h6>
                    <h6 class="bg-red text-center">@ViewBag.Error</h6>
                    <a class="btn btn-success pull-right" href="~/FleetManagement/AddNewFleet">Add New Fleet</a>
                    <table id="datatable-buttons" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Fleet Id</th>
                                <th>CarType</th>
                                <th>Model</th>
                                <th>Driver</th>
                                <th>Location Of Duty</th>
                                <th>Fuel Allocation</th>
                                <th>Maintainance Scheduel</th>
                                <th>Insurance Type</th>
                                <th>Insurance Expiry</th>
                            </tr>
                        </thead>


                        <tbody>
                            @if (ViewBag.Fleet != null)
                            {
                                foreach (var fleet in ViewBag.Fleet)
                                {
                                    <tr class="even pointer">
                                        <td class=" ">@fleet.RecordId</td>
                                        <td class=" ">@fleet.CarType</td>
                                        <td class=" ">@fleet.Model</td>
                                        <td class=" ">@fleet.Driver</td>
                                        <td class=" ">@fleet.LocationOfDuty</td>
                                        <td class=" ">@fleet.FuelAllocation</td>
                                        <td class=" ">@fleet.MaintainaceSchedule</td>
                                        <td class=" ">@fleet.InsuranceType</td>
                                        <td class=" ">@fleet.InsuranceExpiry</td>
                                    </tr>
                                }

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

